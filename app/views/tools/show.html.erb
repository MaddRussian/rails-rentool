  <h1>Tool  <%= "#{@tool.name}" %></h1>
  <div class="card-trip">
    <%= cl_image_tag @tool.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-trip-infos">
      <div class="info-left">
        <p><strong>Condition: </strong><%= @tool.condition.capitalize %></p>
        <div class="box">
          <p><strong>Description: </strong><%= @tool.description.truncate(200) %></p>
        </div>
        <p><strong>Category: </strong><%= @tool.category %></p>
      </div>
      <div class="info-right">
        <div class="button mt-5 mb-3">
          <%= link_to "Reserve", "#", class: "btn btn-gradient" %>
          <%# <%= render "/tools/form", tool: @tool, rental: @rental %>
        </div>
        <h2 class="card-trip-pricing"><strong>Price: </strong>Â¥<%= @tool.rental_price %></h2>
        <p><strong>Location: </strong><%= @tool.location %></p>
      </div>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
</div>
