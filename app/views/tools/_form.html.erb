<%= simple_form_for tool do |f| %>
  <%= f.input :name %>
  <%= f.input :category, as: :radio_buttons, collection: ["Power Tools", "Hand Tools", "Kitchen Tools", "Yard Tools"], selected: "Power Tools", item_wrapper_class: 'inline' %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :condition, as: :radio_buttons, collection: ["Excellent", "Good", "Fair"], default: "Excellent", item_wrapper_class: 'inline'%>
  <%= f.label "Price Per Day", class: "mb-2" %>
  <div class="input-group mb-3">
    <span class="input-group-text">Â¥</span>
    <%= f.input_field :price, class: "form-control", min: 1, value: 100%>
  </div>
  <%= f.input :photo, as: :file %>
  <%= link_to "Create listing",  "/users/dashboard", class: "btn btn-info my-4" %>
<% end %>
