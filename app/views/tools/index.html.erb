<div class="container my-1">
  <div class="search d-flex justify-content-center w-100" style="border-bottom: 1px solid black">
    <div class="index-title d-flex ">
      <h1 class="my-4" style="font-size: 32px">Browse the toolbox</h1>
    </div>
    <div class="search-bar m-4 mx-5">
      <%= form_with url: tools_path, method: :get, data: { turbo_stream: true }, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search...",
            onkeyup: "this.form.querySelector('input[type=submit]').click()"
        %>
        <%= submit_tag "レンtool", name: "", class: "btn btn-outline-success mx-2" %>
      <% end %>
    </div>
  </div>
  <!-- Split Page -->
  <%# <div class="row" style="height: 80vh;"> %>
  <!-- Cards column -->
  <%# <div class="col-md-6"> %>
  <div class="row">
    <div class="col-md-6">
      <%= render "tools/list", tools: @tools, markers: @markers %>
    </div>
    <%# </div> %>
    <!-- Map column -->
    <%# <div class="col-md-6 p-4 pt-4" style="position: sticky;"> %>
    <div class="col-md-6">
      <div class="right-half rounded shadow-sm my-4" style="height: 100vh; width: 100%; position: sticky; top: 0; border-radius: 16%"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
